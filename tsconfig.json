{
  "compilerOptions": {
    "module": "es2022",
    "target": "es2017",
    "moduleResolution": "node",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "three",
      "webpack"
    ]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
